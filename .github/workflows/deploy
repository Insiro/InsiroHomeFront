name: Deploy_and build
    
on:
    push:
        branches: [ master ]
    workflow_dispatch:

jobs:
  deploy:
    name: Deploy then build
    runs-on: [ubuntu-latest]
    
    strategy:
      matrix:
        node-version: [20.x]
    
    steps:
      - name: SSH Remote Commands
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.REMOTE_IP }}
          username: ${{ secrets.REMOTE_SSH_ID }}
          password: ${{ secrets.PASSWORD }}
          port: 22
          script: |
            cd ~/temp/front
            git pull
            bun install & bun builds
            rm -r /data/server_data/homeServer/front
            cp -r /data/server_data/homeServer/front
